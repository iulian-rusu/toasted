<script src="js/requests.js" type="text/javascript"></script>
<div class="flex-column" id="index-div">
    <div id="welcome">
        <% if (session.user) { %>
            <h2>Bine ai venit, <span class="fancy-font"><%= session.user.firstName %> <%= session.user.lastName %></span> !</h2>
        <% } else { %>
            <h2>Bun venit la <span class="fancy-font">toasted.com</span></h2>
        <% } %>
    </div>
    <div id="buttons">
        <button onclick="request('/creare-bd', 'Baza de date creata', 'POST')">Creare BD</button>
        <button onclick="request('/inserare-bd', 'Date inserate in baza de date', 'POST')">Incarcare BD</button>
    </div>
    <div id="status">
        <p id="message"></p>
    </div>
</div>