<div id="basket-div" class="flex-column">
    <table id="basket-table">
        <thead>
            <th>Produs</th>
            <th>Denumire</th>
            <th>Cantitate</th>
            <th>Preț</th>
        </thead>
        <tbody>
            <% let total = 0; %>
            <% for(let i = 0; i< basket.length; ++i) {%>
            <tr>
                <td class="product-image-td">
                    <img class="product-image" src="images/<%= basket[i].img %>" alt="imagine toaster">
                </td>
                <td><%= basket[i].name %></td>
                <td><%= basket[i].quantity %></td>
                <td>$<%= basket[i].price %></td>
                <% total += basket[i].quantity * basket[i].price; %>
            </tr>
            <% } %>
            <% if (basket.length) {%>
                <tr id="total-cost">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>$<%= total %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <% if (!basket.length) {%>
        <p id="empty-message">Coșul este gol. Click <a href="/">aici</a> pentru a-l umple!</p>
    <% } %>
</div>